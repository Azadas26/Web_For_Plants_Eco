<div class="container-fluid" id="image">
    <div class="row">
        <div class="col-md-12 mt-5 p-5">
            <table class="table text-center" id="userorders">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Products</th>
                        <th scope="col">Products Image</th>
                        <th scope="col">Discription</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Payment Method</th>
                        <th scope="col"> Status</th>
                        <th scope="col">Payment Date</th>
                        <th scope="col">User (Buy Products)</th>
                        <th scope="col">user Mail(Buy Products)</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each info}}
                    {{#if pros}}
                    <tr>

                        <td>{{@index}}</td>
                        <td>{{this.pros.pro.pname}}</td>
                        <td><img src="/shope-image/{{this.pros._id}}.jpg" style="width: 200px; height: 200px;" alt="">
                        </td>
                        <td style="max-width: 90px;">{{this.pros.pro.pdiscription}}</td>
                        <td>{{this.pros.pro.pprice}}</td>
                        <td>{{this.quantity}}</td>
                        <td>{{this.pay}}</td>
                        <td>{{this.status}}</td>
                        <td>{{this.date}}</td>
                        <td>{{this.buyuser.name}}</td>
                        <td>{{this.buyuser.email}}</td>
                    </tr>
                    {{/if}}
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>


<style>
    #image {
        background-image: url('/images/allbg.jpg');
        background-attachment: fixed;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: right;
        height: auto;
    }
</style>