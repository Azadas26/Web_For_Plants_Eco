<div class="container-fluid" id="image">
    <div class="row">
        <div class="col-md-12 mt-5 p-5">
            <table class="table text-center" id="userorders">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Products</th>
                        <th scope="col">Products Image</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Payment Method</th>
                        <th scope="col"> Status</th>
                        <th scope="col">Payment Date</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each info}}
                    {{#if products}}
                    <tr>

                        <td>{{@index}}</td>
                        <td>{{this.products.pro.pname}}</td>
                        <td><img src="/shope-image/{{this.products._id}}.jpg" style="width: 200px; height: 200px;"
                                alt=""></td>
                        <td>{{this.products.pro.pprice}}</td>
                        <td>{{this.quantity}}</td>
                        <td>{{this.pay}}</td>
                        <td>{{this.status}}</td>
                        <td>{{this.date}}</td>

                    </tr>
                    {{/if}}
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    #image {
        background-image: url('/images/orgback.jpg');
        background-attachment: fixed;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: right;
    }
</style>